@model VypocetStatiky.Models.InputClass


<h1>Index</h1>

<h4>InputClass</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vstup" class="control-label"></label>
                <input asp-for="Vstup" class="form-control" />
                <span asp-validation-for="Vstup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Operace" class="control-label"></label>
                @Html.DropDownListFor(model => model.Operace, new SelectList(Model.MozneOperace, "Value", "Text"), new {@class = "form-select"})
                <span asp-validation-for="Operace" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Vygeneruj statistiku" class="btn btn-primary" />
            </div>
            <p class="m-3">Soucet: <br><b>@Model.Secti()</b></p>
            <p class="m-3">Nejmensi cislo <br/><b>@Model.NejmensiCislo()</b></p>
            <p class="m-3">Nejvetsi cislo <br><b>@Model.NejvetsiCislo()</b></p>
            <p class="m-3">Prumer <br><b>@Model.Prumer()</b></p>
            <p class="m-3">Serazena cisla <br>
                @Model.SerazenaCislaFormatted()
            </p>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
